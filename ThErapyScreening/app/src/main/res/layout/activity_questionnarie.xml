<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionnarieActivity">

    <TextView
        android:id="@+id/questions_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23dp"
        android:textColor="@color/blue"
        android:layout_marginTop="20dp"
        android:padding="45dp"/>

    <RelativeLayout
        android:id="@+id/answers_widgets"
        android:layout_width="500dp"
        android:layout_height="550dp"
        android:layout_below="@id/questions_textView"
        android:layout_marginTop="-1dp">

        <TextView
            android:id="@+id/firstName_parent_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="First Name"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/firstName_parent_editText_view"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/firstName_parent_text_view"
            android:layout_marginLeft="60dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lastName_parent_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/firstName_parent_text_view"
            android:text="Last Name"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/lastName_parent_editText_view"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastName_parent_text_view"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/firstName_parent_editText_view"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/age_parent_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstName_parent_editText_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:text="Age"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <NumberPicker
            android:id="@+id/age_parent_numberPicker"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@+id/age_parent_text_view"></NumberPicker>

        <TextView
            android:id="@+id/sex_parent_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lastName_parent_editText_view"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/age_parent_numberPicker"
            android:text="Sex"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <NumberPicker
            android:id="@+id/sex_parent_numberPicker"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@+id/sex_parent_text_view"></NumberPicker>

        <TextView
            android:id="@+id/relationToChild_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_parent_text_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="90dp"
            android:text="Relation to the child"
            android:textColor="@color/blue"
            android:textSize="15dp" />

        <NumberPicker
            android:id="@+id/relationToChild_numberPicker"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_below="@id/sex_parent_numberPicker"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/relationToChild_text_view"></NumberPicker>

        <TextView
            android:id="@+id/MainConcernQuestion_text_view"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relationToChild_text_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:text="What is your main concern about your child's mental health?"
            android:textColor="@color/blue"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/MainConcernAnswer_editText_view"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/MainConcernQuestion_text_view"
            android:layout_marginLeft="60dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/firstName_child_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MainConcernAnswer_editText_view"
            android:layout_marginLeft="60dp"
            android:text="First Name (Child)"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/firstName_child_editText_view"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_below="@+id/firstName_child_text_view"
            android:layout_marginLeft="60dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/lastName_child_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MainConcernAnswer_editText_view"
            android:layout_toRightOf="@+id/firstName_child_text_view"
            android:text="Last Name (Child)"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="27dp"
            android:textSize="15dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/lastName_child_editText_view"
            android:layout_width="123dp"
            android:layout_height="40dp"
            android:layout_below="@+id/lastName_child_text_view"
            android:layout_toRightOf="@+id/firstName_child_editText_view"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="27dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/age_child_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstName_child_editText_view"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:text="Age\n(Child)"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <NumberPicker
            android:id="@+id/age_child_numberPicker"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/firstName_child_editText_view"
            android:layout_toRightOf="@+id/age_child_text_view"></NumberPicker>

        <TextView
            android:id="@+id/sex_child_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstName_child_editText_view"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/age_child_numberPicker"
            android:text="Sex\n(Child)"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="visible" />

        <NumberPicker
            android:id="@+id/sex_child_numberPicker"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/firstName_child_editText_view"
            android:layout_toRightOf="@+id/sex_child_text_view"></NumberPicker>

        <Button
            android:background="@drawable/buttonsquestions"
            android:textColor="@color/white"
            android:id="@+id/never_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="150dp"
            android:text="Never" />

        <Button
            android:background="@drawable/buttonsquestions"
            android:textColor="@color/white"
            android:id="@+id/sometimes_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@id/never_button"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text="Sometimes" />

        <Button
            android:background="@drawable/buttonsquestions"
            android:textColor="@color/white"
            android:id="@+id/always_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@id/sometimes_button"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text="Always" />

    </RelativeLayout>

    <Button
        android:background="@drawable/buttonsquestions"
        android:textColor="@color/white"
        android:id="@+id/next_button"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Next"
        android:textSize="23dp"
        android:layout_marginTop="740dp"
        android:layout_marginLeft="260dp"/>

</RelativeLayout>